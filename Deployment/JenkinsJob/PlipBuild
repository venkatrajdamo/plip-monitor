pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        sh 'mvn clean package -DskipTests'
      }
    }
    stage('Test') {
      steps {
        sh 'mvn test'
      }
    }
  }
  post {
    success {
      echo 'Build and tests completed successfully.'
    }
    failure {
      echo 'Build or tests failed.'
    }
  }
}