pipeline {
  agent any

  environment {
    PLIP_ENV_FILE = credentials('plip-env-test')
  }

  stages {
    stage('Load Env Vars') {
      steps {
          // Export all key=value pairs in the .env into the environment
          sh '''
            set -a
            . "$PLIP_ENV_FILE"
            set +a
          '''
      }
    }

    stage('Build') {
      steps {
        sh 'mvn clean package -DskipTests'
      }
    }

    stage('Test') {
      steps {
        sh 'mvn test'
      }
    }
  }

  post {
    success {
      echo 'Build and tests completed successfully.'
    }
    failure {
      echo 'Build or tests failed.'
    }
  }
}